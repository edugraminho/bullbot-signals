# =============================================================================
# CONFIGURAÇÕES DO AMBIENTE
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# BANCO DE DADOS - POSTGRESQL
# =============================================================================
POSTGRES_DB=crypto_hunter
POSTGRES_USER=crypto_user
POSTGRES_PASSWORD=crypto_password_2024
POSTGRES_HOST=db
POSTGRES_PORT=5433
DATABASE_URL=postgresql://crypto_user:crypto_password_2024@localhost:5433/crypto_hunter

# =============================================================================
# CACHE - REDIS
# =============================================================================
# Nota: Para conexões de fora do container (desenvolvimento local)
REDIS_HOST=redis
REDIS_PORT=6380
REDIS_DB=0
REDIS_URL=redis://localhost:6380/0

# =============================================================================
# EXCHANGES - BINANCE
# =============================================================================
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_TESTNET=false

# =============================================================================
# EXCHANGES - BYBIT
# =============================================================================
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here
BYBIT_TESTNET=false

# =============================================================================
# EXCHANGES - GATE.IO
# =============================================================================
GATEIO_API_KEY=your_gateio_api_key_here
GATEIO_API_SECRET=your_gateio_api_secret_here
GATEIO_TESTNET=false

# =============================================================================
# MENSAGENS - DISCORD
# =============================================================================
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here
DISCORD_CHANNEL_ID=your_discord_channel_id_here

# =============================================================================
# MENSAGENS - TELEGRAM
# =============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# =============================================================================
# TRADING E ANÁLISE TÉCNICA
# =============================================================================
# Configurações do RSI
DEFAULT_RSI_PERIOD=14
DEFAULT_OVERBOUGHT_LEVEL=70.0
DEFAULT_OVERSOLD_LEVEL=30.0
OVERBOUGHT_LEVEL=70.0
OVERSOLD_LEVEL=30.0

# Configurações de Trading
MAX_POSITION_SIZE=0.1
MAX_DAILY_LOSS=0.05
ENABLE_AUTO_TRADING=false

# =============================================================================
# COLETA DE DADOS
# =============================================================================
# Configurações de Rate Limit
EXCHANGE_RATE_LIMIT=100

# Configurações de Coleta
COLLECTION_INTERVAL=60
MAX_DATA_POINTS=1000
MIN_VOLUME_24H=1000000
MAX_SYMBOLS_PER_EXCHANGE=100

# =============================================================================
# NOTIFICAÇÕES
# =============================================================================
NOTIFICATIONS_ENABLED=true
MIN_SIGNAL_STRENGTH=0.7
NOTIFICATION_CHECK_INTERVAL=300

# =============================================================================
# CELERY - PROCESSAMENTO ASSÍNCRONO
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6380/0
CELERY_RESULT_BACKEND=redis://localhost:6380/0
CELERY_TASK_ALWAYS_EAGER=false

# =============================================================================
# SEGURANÇA
# =============================================================================
SECRET_KEY=your_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30 