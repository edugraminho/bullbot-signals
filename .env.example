# =============================================================================
# CONFIGURAÇÕES DO AMBIENTE
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# BANCO DE DADOS
# =============================================================================
DATABASE_URL=postgresql://crypto_user:crypto_password@postgres:5432/crypto_hunter
REDIS_URL=redis://redis:6379/0

# =============================================================================
# EXCHANGES - BINANCE
# =============================================================================
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_TESTNET=false

# =============================================================================
# EXCHANGES - BYBIT
# =============================================================================
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here
BYBIT_TESTNET=false

# =============================================================================
# EXCHANGES - GATE.IO
# =============================================================================
GATEIO_API_KEY=your_gateio_api_key_here
GATEIO_API_SECRET=your_gateio_api_secret_here
GATEIO_TESTNET=false

# =============================================================================
# MENSAGENS - DISCORD
# =============================================================================
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here
DISCORD_CHANNEL_ID=your_discord_channel_id_here

# =============================================================================
# MENSAGENS - TELEGRAM
# =============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here



# =============================================================================
# TRADING
# =============================================================================
DEFAULT_RSI_PERIOD=14
DEFAULT_OVERBOUGHT_LEVEL=70.0
DEFAULT_OVERSOLD_LEVEL=30.0
MAX_POSITION_SIZE=0.1
MAX_DAILY_LOSS=0.05
ENABLE_AUTO_TRADING=false

# =============================================================================
# CELERY
# =============================================================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_ALWAYS_EAGER=false

# =============================================================================
# SEGURANÇA
# =============================================================================
SECRET_KEY=your_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30 